.story-page{
    height:100vh;
    background-size:cover;
}
.story-page .cat-swiper{
    width:100%;
    height:539rpx;
}
.story-items{
    margin-top:39rpx; 
}
.story-page .cat-swiper swiper{
    height:100%;
    width:100%;
}
.story-page .cat-swiper swiper image{
    width:100%;
}
.story-page-text{
    font-size:30rpx;
    padding:97rpx 70rpx;
    line-height:54rpx;
}
.story-page .story-item-title{
    background:url('https://catseefun.happyhao.top/assets/line.png') no-repeat;
    background-size:100% auto;
    display:flex;
    justify-content:center;
    position: relative;
}
.story-item-title image{
    width:296rpx;
    height:168rpx;
}
.story-item-title-text{
    position: absolute;
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
    font-size:31rpx;
    color:#595757;
    margin-top:9px;
}
.story-item-content{
    font-size:25rpx;
    line-height:44rpx;
    padding:40rpx 50rpx;
}